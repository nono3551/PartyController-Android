<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_green3">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/ui_main_session_view_appIcon"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_app_icon" />


        <TextView
            android:id="@+id/ui_main_session_view_nameOfTheSession"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            tools:text="name_of_the_session" />

        <TextView
            android:id="@+id/ui_main_session_numberOfSongs"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="#"
            android:textColor="@color/white"
            tools:text="Songs:{x}" />


        <TextView
            android:id="@+id/ui_main_session_view_Owner"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            tools:text="You are/not the owner of this session" />

        <View
            android:layout_width="15dp"
            android:layout_gravity="start"
            android:layout_height= "2dp"
            android:background="@color/white" />

        <View
            android:layout_width="40dp"
            android:layout_gravity="start"
            android:layout_marginTop="3dp"
            android:layout_height= "2dp"
            android:background="@color/white" />
        <View
            android:layout_width="4dp"
            android:layout_gravity="start"
            android:layout_marginTop="3dp"
            android:layout_height= "2dp"
            android:background="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">
        </Space>

        <ImageButton
            android:id="@+id/ui_main_session_view_kontextMenu"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_vert"
         />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">
        </Space>

        <ImageButton
            android:id="@+id/ui_main_session_in_view_playPause"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_play"
          />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/ui_main_session_view_next"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_next"
      />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">
        </Space>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >
        <View
            android:layout_width="380dp"
            android:layout_gravity="end"
            android:layout_height= "2dp"
            android:background="@color/white" />
        <View
            android:layout_width="200dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="end"
            android:layout_height= "2dp"
            android:background="@color/white" />

        <View
            android:layout_width="40dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="end"
            android:layout_height= "2dp"
            android:background="@color/white" />


        <TextView
            android:id="@+id/ui_main_session_view_currentSong"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="Current song"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/ui_main_session_view_artist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            tools:text="artist" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            tools:ignore="NestedWeights">
        </Space>



    </LinearLayout>


</LinearLayout>